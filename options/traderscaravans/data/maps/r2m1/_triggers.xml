        _Action="Add"
        _SelectorKeys="Name"
        Name="CARAVAN_TOWN_TRUCK"
        active="1">
        <event timeout="5.1" eventid="GE_TIME_PERIOD"/>

        <script>
            TeamCreateWithWarez("KARAVANTOWN", 1004, CVector(getPos("TheTuzz_deploy") ), {"r2m1_CaravanTruckBelaz01"}, nil, 1)

            local t = GetEntityByName("KARAVANTOWN")
            if t then
                t:StackOpen()
                t:SetDestination( CVector(getPos("support_01") ))
                t:SetDestination( CVector(getPos("TheDoubtful_deploy") ))
                t:SetDestination( CVector(getPos("TheSel_defend") ))
                t:SetDestination( CVector(getPos("support_07") ))
                t:SetDestination( CVector(getPos("support_03") ))
                t:SetDestination( CVector(getPos("support_04") ))
                t:SetDestination( CVector(getPos("support_05") ))
                t:SetDestination( CVector(getPos("support_02") ))
                t:SetDestination( CVector(getPos("TheUnderAttaks_deploy") ))
                t:SetDestination( CVector(getPos("TheTuzz_deploy") ))
                t:StackLoop()
                t:StackClose()
            end
            TActivate( "CARAVAN_TOWN_TRUCK_DIE" )
            TActivate( "CARAVAN_TOWN_1" )
            trigger:Deactivate()
        </script>
    </trigger>


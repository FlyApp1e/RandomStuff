<triggers>
    <trigger
        _Action="Add"
        _SelectorKeys="Name"
        Name="CARAVAN_TOWN_TRUCK"
        active="1">
        <event timeout="5.1" eventid="GE_TIME_PERIOD"/>

        <script>
            TeamCreateWithWarez("KARAVANTOWN", 1004, CVector(getPos("Lager") ), {"r2m2_CaravanTruckUral01"}, nil, 1)

            local t = GetEntityByName("KARAVANTOWN")
            if t then
                t:StackOpen()
                t:SetDestination( CVector(getPos("Toskana_deploy") ))
                t:SetDestination( CVector(getPos("ZnakiVillage_enter") ))
                t:SetDestination( CVector(getPos("Toskana_deploy2") ))
                t:SetDestination( CVector(getPos("Lager") ))
                t:StackLoop()
                t:StackClose()
            end
            TActivate( "CARAVAN_TOWN_TRUCK_DIE" )
            TActivate( "CARAVAN_TOWN_1" )
            trigger:Deactivate()
        </script>
    </trigger>

